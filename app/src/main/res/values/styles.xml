<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

    <style name="SmallFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">10sp</item>
    </style>
    <style name="MediumFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">12sp</item>
    </style>
    <style name="LargeFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">14sp</item>
    </style>
    <style name="LargeFont.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="XLFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="XXLFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="XXXLFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">20sp</item>
    </style>
    <style name="XXLFont.Bold">
        <item name="android:textStyle">bold</item>
    </style>
    <style name="AwesomeFont" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">32sp</item>
    </style>

    <style name="SmallFont.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MediumFont.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="LargeFont.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="XLFont.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="XXLFont.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="XXXLFont.Inverse">
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
